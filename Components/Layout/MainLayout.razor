@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Nav

<CascadingAuthenticationState>
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            <AuthorizeView>
                <Authorized>
                    <div class="d-flex align-items-center" style="gap:12px">
                        <NavLink href="/my-listings" class="btn btn-outline-secondary">My Listings</NavLink>
                        <button class="btn btn-outline-danger" @onclick="Logout">Log out</button>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="d-flex align-items-center" style="gap:12px">
                        <NavLink href="/register" class="link-secondary" style="cursor:pointer">Sign Up</NavLink>
                        <NavLink href="/login" class="btn btn-primary" style="cursor:pointer">Sign Up or Log In</NavLink>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
</CascadingAuthenticationState>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private async Task Logout()
    {
        using var client = new HttpClient { BaseAddress = new Uri(Nav.BaseUri) };
        await client.PostAsync("/auth/logout", new FormUrlEncodedContent(new Dictionary<string, string>()));
        Nav.NavigateTo("/", forceLoad: true);
    }
}
